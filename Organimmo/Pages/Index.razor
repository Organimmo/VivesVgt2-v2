@attribute [RouteAttribute(BlazorRoutes.Translations.Index)]

@using MudBlazor
@using Organimmo.DAL
@using Organimmo.Services.Model

@inject ISnackbar SnackBar

<img class="OrganimmoImage" src="/images/Organimo logo.png" alt="Organimo logo" width="215" height="55">

<p class="WindowText">Window</p>

<MudTable Style="position: fixed; top: 4rem; width: 100%;" Items="@Translations" CanCancelEdit="true" SortLabel="Sort By" FixedHeader="true"  Filter="new Func<JsonModel,bool>(FilterFunc1)" >
    <ToolBarContent>
        <MudTextField class="Searchbar" @bind-Value="_searchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" style="max-width= 5rem"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh Class="fw-bold pa-3 mr-14"><MudTableSortLabel SortBy="new Func<JsonModel, object>(x => x.Id)">Id</MudTableSortLabel></MudTh>
        <MudTh Class="fw-bold pa-3 mr-14"><MudTableSortLabel SortBy="new Func<JsonModel, object>(x => x.Type)">Type</MudTableSortLabel></MudTh>
        <MudTh Class="fw-bold pa-3 mr-14"><MudTableSortLabel SortBy="new Func<JsonModel, object>(x => x.Type)">Name</MudTableSortLabel></MudTh>
        <MudTh Class="fw-bold pa-3 mr-14"><MudTableSortLabel Enabled="true" SortBy="new Func<JsonModel, object>(x => x.DefaultTranslation)">Default Translation </MudTableSortLabel></MudTh>
        <MudTh Class="fw-bold pa-3 mr-14"><MudTableSortLabel Enabled="true" SortBy="new Func<JsonModel, object>(x => x.CurrentTranslation)">Current Translation</MudTableSortLabel></MudTh>
        <MudTh Class="fw-bold pa-3 mr-14"><MudTableSortLabel Enabled="true" SortBy="new Func<JsonModel, object>(x => x.SuggestedTranslation)">Suggested Translation </MudTableSortLabel></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd Class="fw-bold pa-3 mr-14" DataLabel="Id">@context.Id</MudTd>
        <MudTd Class="fw-bold pa-3 mr-14" DataLabel="Type">@context.Type</MudTd>
        <MudTd Class="fw-bold pa-3 mr-14" DataLabel="Type">@context.Name</MudTd>
        <MudTd Class="fw-bold pa-3 mr-14" DataLabel="DefaultTranslation">@context.DefaultTranslation</MudTd>
        <MudTd Class="fw-bold pa-3 mr-14"  DataLabel="CurrentTranslation">@context.CurrentTranslation</MudTd>
        <MudTd Class="fw-bold pa-3 mr-14" DataLabel="SuggestedTranslation">
            <MudText Typo="Typo.body2">@context.SuggestedTranslation</MudText>
        </MudTd>
       
    </RowTemplate>
  
    <RowEditingTemplate>
        <MudTd  DataLabel="Id">@context.Id</MudTd>
        <MudTd DataLabel="Type">@context.Type</MudTd>
        <MudTd DataLabel="Type">@context.Name</MudTd>
        <MudTd DataLabel="DefaultTranslation">@context.DefaultTranslation</MudTd>
        <MudTd DataLabel="CurrentTranslation">@context.CurrentTranslation</MudTd>
        <MudTd DataLabel="SuggestedTranslation">
            <MudTextField @bind-Value="@context.SuggestedTranslation" Variant="Variant.Outlined" Required />
        </MudTd>
    </RowEditingTemplate>
        <PagerContent>
            <MudTablePager HideRowsPerPage="true"/>
        </PagerContent>
</MudTable>

<button class="saveBtn" onClick=""><img src="/images/Save.png" width="300" height="75" /></button>

